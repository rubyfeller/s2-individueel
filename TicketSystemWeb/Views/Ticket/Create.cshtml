@using static TicketSystemWeb.Models.Ticket
@model Ticket

@{
    ViewData["Title"] = "Ticket aanmaken";
}

<form method="post" asp-action="CreateReply">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Apparaten toevoegen</h2>
            <p>Voeg minstens 1 apparaat toe</p>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ticketSubject">Voeg apparaat 1 toe (*)</label>
            <input asp-for="ticketContent" class="form-control" rows="2">
            <br />
            <label asp-for="ticketSubject">Voeg apparaat 2 toe</label>
            <input asp-for="ticketContent" class="form-control" rows="2">
            <textarea asp-for="ticketId" class="form-control" rows="7" hidden></textarea>
            <br />
            <button type="submit" class="btn btn-primary" style="width: 150px">Apparaten toevoegen</button>
        </div>
    </div>
</form>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Ticket aanmaken</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="ticketSubject">Onderwerp</label>
            <input asp-for="ticketSubject" class="form-control" />
            <span asp-validation-for="ticketSubject" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ticketContent">Probleemomschrijving</label>
            <textarea asp-for="ticketContent" class="form-control" rows="7"></textarea>
            <span asp-validation-for="ticketContent" class="text-danger"></span>
        </div>
        <div class="row">
            <span asp-for="ticketCategory">Categorie</span>
            <div class="col-sm-3">
                <select asp-for="ticketCategory" asp-items="Html.GetEnumSelectList<ticketCategories>()" class="form-control">
                    <option selected="selected" value="">Kies een categorie</option>
                </select>
                <span asp-validation-for="ticketCategory" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row">
            <span asp-for="ticketPriority">Prioriteit</span>
            <div class="col-sm-3">
                <select asp-for="ticketPriority" asp-items="Html.GetEnumSelectList<ticketPriorities>()" class="form-control">
                    <option selected="selected" value="">Kies een prioriteit</option>
                </select>
                <span asp-validation-for="ticketPriority" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary" style="width: 150px">Ticket aanmaken</button>
    <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary" style="width: 150px">Terug naar overzicht</a>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}