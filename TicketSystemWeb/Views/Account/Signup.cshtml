@using TicketSystemWeb.ViewModels
@model EmployeeAccountViewModel

@{
    ViewData["Title"] = "Account - Registreren";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Account - Registreren</h2>
            <p>Registreer d.m.v. het invullen van enkele gegevens</p>
        </div>
        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Voornaam</label>
                <input asp-for="FirstName" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Achternaam</label>
                <input asp-for="LastName" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Wachtwoord</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <button type="submit" class="btn btn-primary">Registreren</button>
        </form>
    </div>
</div>
